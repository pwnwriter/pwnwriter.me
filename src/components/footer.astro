---
import Link from '~/components/link.astro';
import Wrapper from '~/components/wrapper.astro';
import Subheading from './text/subheading.astro';

let links = {
	main: [
		{ text: '~', href: '/' },
		{ text: 'About', href: '/about' },
		{ text: 'Notes', href: '/notes' },
		{ text: 'Syndications', href: '/syndications' },
	],
	meta: [
		{ text: 'Tags', href: '/notes/tags' },
		{
			text: 'RSS',
			href: import.meta.env.DEV ? `/rss.xml?${Date.now()}` : '/rss.xml',
		},
		{
			text: 'Umami stats',
			href: 'https://cloud.umami.is/share/tNl4j2DN3BMN3xwq/pwnwriter.me',
		},
	],
	social: [
		{ text: 'X', href: 'https://x.com/pwnwriter' },
		{ text: 'GitHub', href: 'https://github.com/pwnwriter' },
		{ text: 'Linkedin', href: 'https://www.linkedin.com/in/pwnwriter' },
	],
};
---

<Wrapper>
	<footer>
		<nav class="mb-md flex justify-between text-sm">
			<div class="flex flex-col">
				<Subheading id="pwn" Element="h2">musings</Subheading>
				<ul aria-labelledby="pwn" class="space-y-0.5">
					{
						links.main.map(({ text, href }) => (
							<li>
								<Link href={href}>{text}</Link>
							</li>
						))
					}
				</ul>
			</div>
			<div class="flex flex-col">
				<Subheading id="social" Element="h2">Elsewhere</Subheading>
				<ul aria-labelledby="social" class="space-y-0.5">
					{
						links.social.map(({ text, href }) => (
							<li>
								<Link href={href}>{text}</Link>
							</li>
						))
					}
				</ul>
			</div>
			<div class="flex max-w-[96px] flex-col xs:max-w-[160px]">
				<Subheading id="meta" Element="h2">Meta</Subheading>
				<ul aria-labelledby="meta" class="space-y-0.5">
					{
						links.meta.map(({ text, href }) => (
							<li>
								<Link href={href}>{text}</Link>
							</li>
						))
					}
				</ul>
			</div>
		</nav>
	</footer>
</Wrapper>

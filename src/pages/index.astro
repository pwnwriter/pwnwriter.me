---
import Layout from "~/layouts/Layout.astro";
import Wrapper from "~/components/wrapper.astro";
import Heading from "~/components/text/heading.astro";
import Subheading from "~/components/text/subheading.astro";
import Paragraph from "~/components/text/paragraph.astro";
import Link from "~/components/link.astro";
import PostList from "~/components/post-list.astro";
---

<Layout title="~" description="pwn::musings.">
  <Wrapper>
    <Heading Element="h1">
      Hi! I am <span class="shimmer">Nabeen</span>
    </Heading>

    <Paragraph>
      Iâ€™m a cybersecurity student based in Miami, Florida.
    </Paragraph>
    <Paragraph
      >This space is more like a digital workbench, where I share thoughts,
      tinker with ideas, and write about the things I enjoy.
    </Paragraph>

    <div class="h-xs"></div>
    <Link href="/about">{"{Biography}"}&nbsp;&nbsp;&Rarr;</Link>

    <div class="h-lg"></div>
    <Subheading Element="h2">Notes</Subheading>
    <PostList max={3} />

    <div class="h-xs"></div>
    <Link href="/notes">{"{ All notes }"}&nbsp;&nbsp;&Rarr;</Link>
  </Wrapper>
</Layout>

<style>
  .shimmer {
    background: linear-gradient(
      90deg,
      var(--f-high) 0%,
      var(--accent) 40%,
      var(--f-high) 60%,
      var(--accent) 100%
    );
    background-size: 200% 100%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 4s ease-in-out infinite;
    font-weight: 700;
  }

  @keyframes shimmer {
    0%,
    100% {
      background-position: 200% center;
    }
    50% {
      background-position: 0% center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .shimmer {
      animation: none;
      background-position: 0% center;
    }
  }
</style>
